@model MyForum.BL.Entities.Repl

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Repl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Replpic" class="control-label"></label>
                <input asp-for="Replpic" accept="Replimage/*" />
                <span asp-validation-for="Replpic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentId" class="control-label"></label>
                <input asp-for="CommentId" class ="form-control" value="@int.Parse(ViewBag.idcomment.ToString())" style="display: none"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-warning" asp-controller="Posts" asp-action="Details" asp-route-id="@int.Parse(ViewData["idpost"].ToString())"><i class="bi bi-back"></i> Back</a>
</div>

